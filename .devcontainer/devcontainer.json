{
  "name": "install-arch-dev",
  "initializeCommand": "bash .devcontainer/load-env.sh",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "MODE": "${localEnv:DEVCONTAINER_MODE}",
      "BRANCH": "${localEnv:DEVCONTAINER_BRANCH}",
      "DEPTH": "${localEnv:DEVCONTAINER_DEPTH}",
      "VERSION": "${localEnv:DEVCONTAINER_VERSION}",
      "REPO_URL": "${localEnv:DEVCONTAINER_REPO_URL}"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.vscode-json",
        "ms-vscode.makefile-tools",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "rust-lang.rust-analyzer",
        "ms-vscode-remote.remote-containers",
        "ms-vscode.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "mounts": [
    "source=install-arch-dev-cache,target=/home/vscode/.cache,type=volume"
  ],
  "workspaceFolder": "/workspaces/install-arch",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    }
  }
}